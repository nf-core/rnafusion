/*
 * -------------------------------------------------
 *  Nextflow config file for UPPMAX (milou / irma)
 * -------------------------------------------------
 * To be applied after main UPPMAX config, overwrites config and
 * submits jobs to the `devcore` queue, which has much faster
 * queue times. All jobs are limited to 1 hour to be eligible
 * for this queue and only one job allowed at a time.
 */

executor {
  name = 'slurm'
  queueSize = 1
}
process {
  queue = 'devel'
  container = 'file:///home/matq007/private/pipeline_images/rnafusion-dev.simg'

  withName:star_fusion {
    container = 'file:///home/matq007/private/pipeline_images/rnafusion-star-fusion_v1.4.0.simg'
  }
  withName:fusioncatcher {
    container = 'file:///home/matq007/private/pipeline_images/rnafusion-fusioncatcher_v1.00.simg'
  }
  withName:fusion_inspector {
    container = 'file:///home/matq007/private/pipeline_images/rnafusion-fusion-inspector_v1.3.1.simg'
  }
}

params {
  // Max resources to be requested by a devel job
  max_memory = 120.GB
  max_cpus = 16
  max_time = 1.h
}
