/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow config file for use with Docker
 * -------------------------------------------------
 * Defines basic usage limits and docker image id.
 * Imported under the default 'docker' Nextflow
 * profile in nextflow.config
 * NOTE: Not suitable for production use, assumes
 * compute limits of only 16GB memory and 1 CPU core.
 */

docker {
  enabled = true
}

process {
  container = 'nfcore/rnafusion:dev'

  withName:star_fusion {
    container = 'nfcore/rnafusion:star-fusion_v1.0dev'
  }
  withName:fusioncatcher {
    container = 'nfcore/rnafusion:fusioncatcher_v1.0dev'
  }
  withName:fusion_inspector {
    container = 'nfcore/rnafusion:fusion-inspector_v1.0dev'
  }
  withName:ericscript {
    container = 'nfcore/rnafusion:ericscript_v1.0dev'
  }
  withName:pizzly {
    container = 'nfcore/rnafusion:pizzly_v1.0dev'
  }
  withName:squid {
    container = 'nfcore/rnafusion:squid_v1.0dev'
  }
  withName:summary {
    container = 'nfcore/rnafusion:summary-report_v1.0dev'
  }
}

